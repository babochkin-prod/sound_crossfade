<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fon"
        android:scaleType="centerCrop"
        android:id="@+id/img_fon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="150dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Scip"
            android:background="@drawable/buttons_style"
            android:textColor="#fff"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_scip"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/track_fon"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/note"
                    android:background="@drawable/icon_fon"
                    android:id="@+id/img_track_1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="75dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select track"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_track_1_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@drawable/track_fon"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100">
                            <LinearLayout
                                android:layout_weight="50"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/track_line_black"
                                android:id="@+id/time_line_1"
                                android:orientation="horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn_track_1_select"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/track_fon"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/note"
                    android:background="@drawable/icon_fon"
                    android:id="@+id/img_track_2"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="75dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select track"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_track_2_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@drawable/track_fon"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100">
                            <LinearLayout
                                android:layout_weight="50"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/track_line_black"
                                android:id="@+id/time_line_2"
                                android:orientation="horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn_track_2_select"
                />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/controll_panel"
            >


            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/seek_cross_fade"
                android:max="10"
                android:min="2"
                android:progress="6"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2s"
                    android:textColor="#aaa"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp"
                    android:id="@+id/txt_crossfade_progress"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10s"
                    android:textColor="#aaa"
                    android:layout_marginRight="25dp"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:id="@+id/txt_crossfade_max"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/buttons_style"
                        android:src="@drawable/ic_baseline_play_arrow_24"
                        android:id="@+id/btn_play"
                        />
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>